<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.sakaiproject.profile2.model">

	<class name="SocialNetworkingInfo" table="PROFILE_SOCIAL_INFO_T">

		<!-- one per user -->
		<id name="userUuid" column="USER_UUID" length="99">
			<generator class="assigned" />
		</id>
		
		<property name="facebookUsername" column="FACEBOOK_USERNAME" not-null="false" />
		<property name="linkedinUsername" column="LINKEDIN_USERNAME" not-null="false" />
		<property name="myspaceUsername" column="MYSPACE_USERNAME" not-null="false" />
		<property name="skypeUsername" column="SKYPE_USERNAME" not-null="false" />
		<property name="twitterUsername" column="TWITTER_USERNAME" not-null="false" />
		
	</class>
	
	<query name="getSocialNetworkingInfo">
    	<![CDATA[from SocialNetworkingInfo socialNetworkingInfo WHERE socialNetworkingInfo.userUuid = :userUuid]]>
	</query>
</hibernate-mapping>